@model StudentInfo.Models.Student;
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Student</h1>

@if (Model != null)
{
    <form method="post">
        <div class="mt-2">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-2">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-2">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" />
        </div>
        <div class="mt-2">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" asp-for="Phone" />
        </div>
        <div class="mt-2">
            <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
            <label class="form-check-label" for="Subscribed">Subscribed</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success" asp-controller="Students" asp-action="Edit">Save</button>
            <button type="submit" class="btn btn-danger" asp-controller="Students" asp-action="Delete">Delete</button>
        </div>
    </form>
}